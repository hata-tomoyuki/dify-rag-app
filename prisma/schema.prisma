generator client {
  provider   = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider = "postgresql"
}

model Case {
  id             String    @id @default(uuid())
  title          String    // 案件名
  clientName     String    // クライアント名
  industry       String    // 業種
  companySize    String    // 規模
  budgetMin      Int       // 予算最小値（円）
  budgetMax      Int       // 予算最大値（円）
  goals          String[]  // 目的（複数）
  challenges     String[]  // 課題（複数）
  proposal       String[]  // 提案要点（複数）
  stack          String[]  // 技術スタック（複数）
  durationWeeks  Int       // 期間（週）
  deliverables   String[]  // 成果物（複数）
  result         String    // 成果（自由記述）
  lessonsLearned String[]  // 反省・注意点（複数）
  updatedAt      DateTime  @updatedAt
  createdAt      DateTime  @default(now())

  @@map("cases")
}
